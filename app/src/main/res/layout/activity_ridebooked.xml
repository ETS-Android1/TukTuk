<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5"
    tools:context=".ridebooked">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="378dp"
        android:layout_height="330dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="12dp"
        android:layout_marginTop="68dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="81dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/yellowtickbjg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/convergence"
            android:paddingLeft="20dp"
            android:text="Ride Booked Successfully!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/rideinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="165dp"
            android:textColor="@color/black"
            android:fontFamily="@font/convergence"
            android:textSize="20sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="378dp"
        android:layout_height="160dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="12dp"
        android:layout_marginTop="78dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.098">

        <ImageView
            android:id="@+id/callimage"
            android:layout_width="82dp"
            android:layout_height="66dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/callvector" />

        <TextView
            android:id="@+id/drivername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/convergence"
            android:text="DRIVER"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/callnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="125dp"
            android:text="+91"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/convergence"
            android:text="Tap the button to call the driver for confirmation"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>